{
  "manifest_version": 3,
  "name": "NightShift Lite",
  "version": "0.1",
  "description": "A lightweight, privacy-focused dark mode extension.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],
  "permissions": []
}

